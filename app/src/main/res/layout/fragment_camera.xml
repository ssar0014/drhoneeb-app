<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.camera.cameraFragment">

    <ImageView
        android:id="@+id/picture"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="@string/dr_honeeb"
        android:textStyle="bold"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/editText_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="@string/instantly_identify_your_bee_health"
        android:paddingLeft="16dp"
        android:textStyle="italic"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_takePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:background="@drawable/corners"
        android:gravity="center_horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:text="@string/take_a_photo"
        android:textAlignment="center"
        android:drawableStart="@drawable/baseline_add_a_photo_black_24dp"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_add_a_photo_black_24dp" />



</LinearLayout>