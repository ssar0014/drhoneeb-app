<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_camera">

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.myapplication.ui.camera.cameraFragment"
        android:label="Home"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.myapplication.ui.help.helpFragment"
        android:label="Help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.myapplication.ui.history.historyFragment"
        android:label="Records"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.myapplication.ui.settings.settingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
